#!/bin/bash
#code for 'if' 'elif' 'else' statements
#code works with mac terminal

echo "Enter a number:"
read number
if [ "${number}" -gt 20 ] ; then
        echo "greater than 20"
elif [ "${number}" -gt 10 ] ; then
        echo "greater than 10"
elif [ "${number}" -gt 5 ] ; then
        echo "greater than 5"

else
        echo "number too small"
fi

#!/bin/bash
#code for 'if' 'elif' 'else' statements
#code works with ubuntu terminal

echo "Enter a number:"
read number
if (( $number > 20 )) ; then
        echo "greater than 20"
elif (( $number > 10 )) ; then
        echo "greater than 10"
elif (( $number > 5 )) ; then
        echo "greater than 5"

else
        echo "number too small"
fi

Code to compare numbers on Ubuntu terminal

#!/bin/bash
#compares two values

echo 'Is the first number less then the second?'
test $1 -lt $2 && echo 'yes' || echo 'no'
